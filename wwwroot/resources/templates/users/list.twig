{% extends 'mainLayout.twig' %}

{% block sidebar %}
    {% include 'parts/sidebar.twig' %}

{% endblock %}

{% block topbar %}
    {% include 'parts/topbar.twig' %}
{% endblock %}

{% block mainHeading %}

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Users</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Create User</a>
    </div>

{% endblock %}
{% block mainContent %}
    <table class="table table-striped table-hover table-sm">

    <thead>
    <th>Username</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Level</th>

    </thead>
    <tbody>

    {% for obj in users %}
        <tr>
            <td>{{ obj.getUsername() }}</td>
            <td>{{ obj.getFirstName() }}</td>
            <td>{{ obj.getLastName() }}</td>
            <td>{{ obj.getLevel() }}</td>
        </tr>
    {% endfor %}

    </tbody>
    </table>{% endblock %}